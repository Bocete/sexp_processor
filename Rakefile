# -*- ruby -*-

require 'rubygems'
require 'hoe'
require './lib/sexp_processor.rb'

Hoe.new('SexpProcessor', SexpProcessor::VERSION) do |sexp|
  sexp.rubyforge_name = 'parsetree'
  sexp.developer('Ryan Davis', 'ryand-ruby@zenspider.com')

  sexp.extra_deps << ['ParseTree', '>= 3.0.0']
end

